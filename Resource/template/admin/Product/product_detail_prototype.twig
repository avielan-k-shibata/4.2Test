<div id="product-item_{% if index is not defined %}__name__{% else %}{{ index }}{% endif %}">
    <div class="row">
        <div class="col-2">
            <button type="button"
                    class="product-item-delete btn btn-ec-delete text-right"
                    data-id="{% if index is not defined %}__name__{% else %}{{ index }}{% endif %}">
                削除
            </button>
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-2">
                    {{ form.name.vars.label }}
                </div>
                <div class="col mb-2">
                    <div>
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    {{ form.content.vars.label }}
                </div>
                <div class="col mb-2">
                    <div>
                        {{ form_widget(form.content) }}
                        {{ form_errors(form.content) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>